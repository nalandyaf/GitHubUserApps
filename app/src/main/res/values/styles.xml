<resources>

    <!-- APP THEME -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <!--TOOLBAR-->

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>


    <!--PROGRESS BAR-->

    <style name="ProgressbarLayout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--TEXT STYLE-->

    <style name="AppTab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-Italic.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-Light.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-Medium.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextAppearance.Text.Semi.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/poppins/Poppins-SemiBold.ttf</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="TextViewLogan" parent="TextAppearance.Text.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="EditTextLogan" parent="TextAppearance.Text.Regular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_smm</item>
    </style>

    <style name="SmallBorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="fontPath">fonts/poppins/Poppins-Medium.ttf</item>
    </style>

    <style name="SmallBorderlessLightButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="fontPath">fonts/poppins/Poppins-Medium.ttf</item>
    </style>

    <style name="SmallBorderlessBlackButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="fontPath">fonts/poppins/Poppins-Medium.ttf</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextSizeTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_xms</item>
        <item name="textAllCaps">false</item>
        <item name="fontPath">fonts/poppins/Poppins-Medium.ttf</item>
    </style>

    <style name="EditText" parent="EditTextLogan">
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textSize">@dimen/text_ms</item>
    </style>

    <style name="EditTextRounded" parent="EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_smlarge</item>
        <item name="android:paddingEnd">@dimen/padding_smlarge</item>
        <item name="android:drawablePadding">@dimen/padding_smlarge</item>
    </style>

</resources>
